<% layout('/layouts/boilerplate.ejs') -%>
    <div class="row mt-3-">
        <div class="col-8 offset-2">
            <br>
            <h2>
                Create a new Listing
            </h2>
            <form method="post" enctype="multipart/form-data" class="needs-validation" action="/listings" novalidate>
                <div class="mb-3">
                    <label for="Title" class="form-label">Title</label>
                    <input required type="text" name="listing[title]" placeholder="Add a catchy Title"
                        class="form-control">
                    <div class="invalid-feedback">
                        Enter Title
                    </div>
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea class="form-control" type="text" name="listing[description]" required
                        placeholder="Enter description"></textarea>
                    <div class="invalid-feedback">
                        Enter Description
                    </div>
                </div>
                <div class="mb-3">
                    <label for="image" class="form-label">Upload Image</label>
                    <input class="form-control" type="file" name="listing[image]"
                        placeholder="Enter imaage/URL/Link here" required>
                </div>
                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="price" class="form-label">Price</label>
                        <input required class="form-control" type="number" name="listing[price]" placeholder="1200">
                        <div class="invalid-feedback">
                            Enter Price
                        </div>
                    </div>
                    <div class="mb-3 col-md-8">
                        <label for="country" class="form-label">Country</label>
                        <input class="form-control" type="text" name="listing[country]" required
                            placeholder="Enter Country here">
                        <div class="invalid-feedback">
                            Enter Country
                        </div>
                    </div>
                    <div class="col-md-12">
                        <select name="category" class="form-select form-select-md mb-3">
                            <option selected>Category</option>
                            <option value="Rooms">Rooms</option>
                            <option value="Iconic Cities">Iconic Cities</option>
                            <option value="Mountains">Mountains</option>
                            <option value="Castles">Castles</option>
                            <option value="Amazing Pools">Amazing Pools</option>
                            <option value="Camping">Camping</option>
                            <option value="Farms">Farms</option>
                            <option value="Arctic">Arctic</option>
                        </select>
                    </div>
                </div>

                <div class="mb-3 col-md-12">
                    <label for="location" class="form-label">Location</label>
                    <input required class="form-control" type="text" name="listing[location]"
                        placeholder="Islamabad Pakistan">
                    <div class="invalid-feedback">
                        Enter Location
                    </div>
                </div>
                <button class="btn btn-dark btn-color mt-3" type="submit">Submit</button>
            </form>
        </div>
    </div>
    </div>
    <br><br>