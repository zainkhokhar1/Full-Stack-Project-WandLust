<% layout('/layouts/boilerplate.ejs') -%>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <h2>
                Edit Your Listing
            </h2>
            <form method="post" novalidate enctype="multipart/form-data" class="needs-validation"
                action="/listings/<%=listing.id%>/edit?_method=PUT">
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input required class="form-control" type="text" name="listing[title]" value="<%= listing.title%>">
                    <div class="invalid-feedback">
                        Enter Title
                    </div>
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea required class="form-control" type="text"
                        name="listing[description]"><%=listing.description%></textarea>
                    <div class="invalid-feedback">
                        Enter Description
                    </div>
                </div>
                <div class="mb-3">
                    Original Listing Image <br>
                    <img height="170px" width="210px" src=" <%=originalImageUrl%>" alt="Previous_Image">
                </div>

                <div class="mb-3">
                    <label for="image" class="form-label">Image</label>
                    <input class="form-control" type="file" name="listing[image]" value="<%=listing.image%>">
                </div>
                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="price" class="form-label">Price</label>
                        <input required class="form-control" type="number" name="listing[price]"
                            value="<%=listing.price%>">
                        <div class="invalid-feedback">
                            Enter Price
                        </div>
                    </div>
                    <div class="mb-3 col-md-8">
                        <label for="country" class="form-label">Country</label>
                        <input required class="form-control" type="text" name="listing[country]"
                            value="<%=listing.country%>">
                        <div class="invalid-feedback">
                            Enter Country
                        </div>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="location" class="form-label">Location</label>
                    <input required class="form-control" type="text" name="listing[location]"
                        value="<%=listing.location%>">
                    <div class="invalid-feedback">
                        Enter Location Correctly
                    </div>
                </div>

                <button class="btn btn-dark edit-btn mt-3" type="submit">Confirm Changes</button>

            </form>
        </div>
    </div>
    <br>