<% layout('/layouts/boilerplate.ejs') -%>
    <!-- <h2>All listings</h2> -->

    <style>
        #filters {
            display: flex;
            flex-wrap: nowrap;
            align-items: center;
        }

        .filter {
            text-align: center;
            margin-right: 1.8rem;
            margin-top: 2rem;
            opacity: 0.7;
        }

        #filters a {
            text-decoration: none;
            color: black;
        }

        .filter:hover {
            opacity: 1;
        }

        .filter {
            cursor: pointer;
        }

        .filter p {
            font-size: 0.9rem;
        }

        .tax-info {
            display: none;
        }

        .tax-toggle {
            border: 1px solid rgba(135, 135, 135, 135);
            border-radius: 1rem;
            height: 2.7rem;
            padding: 0.5rem;
            padding-top: 0.5rem;
            margin: 0;
            margin-top: 0.7rem;
        }
        @media (max-width: 1050px) {
         #filters{
            flex-wrap: wrap;
         }   
        }
    </style>

    <div id="filters">
        <a href="/listings/">
            <div class="filter">
                <div><i class="fa-solid fa-cloud-arrow-up"></i></div>
                <p>All</p>
            </div>
        </a>
        <a href="/listings/category/Trending">
            <div class="filter">
                <div><i class="fa-solid fa-fire"></i></div>
                <p>Trending</p>
            </div>
        </a>
        <a href="/listings/category/Rooms">
            <div class="filter">
                <div><i class="fa-solid fa-bed"></i></div>
                <p>Rooms</p>
            </div>
        </a>
        <a href="/listings/category/Iconic Cities">
            <div class="filter">
                <div><i class="fa-solid fa-mountain-city"></i></div>
                <p>Iconic Cities</p>
            </div>
        </a>
        <a href="/listings/category/Mountains">
            <div class="filter">
                <div><i class="fa-solid fa-mountain"></i></div>
                <p>Mountains</p>
            </div>
        </a>
        <a href="/listings/category/Castles">
            <div class="filter">
                <div><i class="fa-brands fa-fort-awesome"></i></div>
                <p>Castles</p>
            </div>
        </a>
        <a href="/listings/category/Amazing Pools">
            <div class="filter">
                <div><i class="fa-solid fa-person-swimming"></i></div>
                <p>Amazing Pools</p>
            </div>
            <a href="/listings/category/Camping">
                <div class="filter">
                    <div><i class="fa-solid fa-campground"></i></i></div>
                    <p>Camping</p>
                </div>
            </a>
            <a href="/listings/category/Farms">
                <div class="filter">
                    <div><i class="fa-solid fa-cow"></i></div>
                    <p>Farms</p>
                </div>
            </a>
            <a href="/listings/category/Arctic">
                <div class="filter">
                    <div><i class="fa-regular fa-snowflake"></i></div>
                    <p>Arctic</p>
                </div>
            </a>
            <div class="tax-toggle">
                <div class=" form-check-reverse form-switch">
                    <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
                    <label class="form-check-label" for="flexSwitchCheckDefault">Display total after taxes</label>
                </div>
            </div>
    </div>
    <div class="row row-cols-xl-3 row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
        <% for(let listing of allListings){ %>
            <a href="/listings/<%=listing.id%>" class="listing-link">
                <div class="card card-listing col">
                    <img src="<%=listing.image.url%>" style="height:20rem" class="card-img-top" alt="Listing_img">
                    <div class="card-img-overlay"></div>
                    <div class="card-body">
                        <p class="card-text">
                            <b>
                                <%=listing.title %>
                            </b><br>
                            <%=listing.price.toLocaleString("en-IN")%>&#8378;/night
                                <i class="tax-info"> &nbsp; &nbsp; +18% Gst</i>
                        </p>
                    </div>
                </div>
            </a>
            <% } %>
    </div>
    <script>
        let taxSwitch = document.getElementById('flexSwitchCheckDefault');
        taxSwitch.addEventListener('click', () => {
            let taxInfo = document.getElementsByClassName('tax-info');
            let arrayTax = Array.from(taxInfo);
            arrayTax.forEach((info) => {
                if (info.style.display !== 'inline') {
                    info.style.display = 'inline'
                }
                else {
                    info.style.display = 'none';
                }
            })
        })
    </script>